# === Dev Stage: TypeScript Node.js Development ===
FROM node:20-slim

# Set working directory
WORKDIR /app

# Copy dependency files
COPY package.json package-lock.json ./

# Install all dependencies (dev included)
RUN npm install

# Copy source files
COPY . .

# Expose port
EXPOSE 3000

# Run the development server with hot-reload using ts-node-dev
CMD ["npx", "ts-node-dev", "--respawn", "--transpile-only", "src/server.ts"]